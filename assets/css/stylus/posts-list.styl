.posts-list {

    & .post {
        &:first-child {
            width: 80%;
            height: 350px;
            overflow: hidden;
            margin-left: auto;
            margin-right: auto;

            &:hover {

                & .info {
                    top: 50%;
                    opacity: 1;
                    & .title > a {
                        font-size: 3em;
                    }
                    & .text {
                        font-size: 18px;
                    }
                }
            }

            & .info {
                position: absolute;
                top: 0%;
                left: 50%;
                opacity: 0;
                transform: translate(-50%, -50%);
                text-align: center;
                transition: .7s ease;
                
                & .text {
                    color: black;
                    text-shadow: 0 0 1px #737475;
                    font-size: 0px;
                }
            }

            & .title > a {
                font-size: 0;
                text-decoration: none;
                color: #037096;
                text-shadow: 0 0 1px #fff;
                transition: .4s ease;
            }
        }

        &:nth-child(1n+2){
            height: 150px;
            margin-top: 25px;
            font-size: 0px;

            & .thumb {
                width: 25%;
                display: inline-block;
                overflow: hidden;
            }

            & .info {
                width: 75%;
                display: inline-block;
                padding-left: 17px;
                box-sizing: border-box;
                font-size: initial;

                & .title {
                    margin-bottom: 4px;
                    & > a {
                        text-decoration: none;
                        color: #000;
                    }
                }

                & .text {
                    color: #9798a6;
                    max-height: 56px;
                    overflow: hidden;
                    & p {
                        margin-top: 0px;
                        margin-bottom: 0px;
                    }
                }
            }
        }
    }

}

.posts-list .post {
    position: relative;

    &:hover {
        
        & .thumb > img {
            filter: grayscale(0);
            transform: scale(1.11,1.17);
            transition-timing-function: ease-out;
            transition-duration: 550ms;
        }
    }
    
    & .thumb {
        width: 100%;
        height: 100%;
        display: block;

        & > img {
            width: 100%;
            height: 100%;
            -webkit-filter: grayscale(100%);
            filter: grayscale(100%);
            -o-object-fit: cover;
            object-fit: cover;
            -o-object-position: center 20%;
            object-position: center 20%;
            transition: .5s linear;
        }
    }

}