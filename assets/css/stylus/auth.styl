.auth {
    & .section-title {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 34%;
    }

    & form {
        width: 50%;
        margin-left: auto;
        margin-right: auto;

        & p {
            margin-top: 11px;
            margin-bottom: 0px;
        }
       
        & #reg_passmail {
            display: block;
            text-align: left;
            color: #555;
            font-size: 14px;
        }

        & input[type='submit'] {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    }
}