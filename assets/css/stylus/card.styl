.section-wrap .post:nth-child(1),
.card {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;

    &:hover {
        & .thumb > img {
            filter: grayscale(0%);
            transform: scale(1.11,1.17);
        }
    }

    & .thumb {
        display: block;
        height: 100%;

        & img {
            width: 100%;
            height: 100%;
            filter: grayscale(100%);
            object-fit: cover;
            object-position: center 20%;
            transition: .3s ease;
        }
    }

    & .info {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        box-sizing: border-box;
        padding: 25px;
    }

    & .title {
        margin-bottom: 5px;

        & > a {
            display: block;
            width: 100%;
            color: #fff;
            font-size: 2rem;
            text-shadow: 0 0 3px #002935;
            text-decoration: none;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: .3s ease;

            &:hover {
                color: orangered;
            }
        }
    }
}