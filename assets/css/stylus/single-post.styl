.single-post {

    & .title {
        margin-bottom: 0px;
    }
    & > img {
        margin-left: auto;
        margin-right: auto;
        display: block;
    }
    & .info {
        margin-bottom: 17px;

        & li {
            display: inline-block;
            margin-left: 3px;
            margin-right: 3px;
            list-style: none;
            color: #aaa;

            &,
            & a {
                font-size: 13px;
            }

            & a {
                text-decoration: none;
                color: #828282;
                &:hover {
                    color: $hoverLink;
                }
            }
        }
    }

    & .text {
        font-size: 15px;
        letter-spacing: 1px;
        color: #423d3d;
        line-height: 24px;
    }

    & .commentlist {
        padding-left: 0px;
        & > li {
            margin-top: 17px;
            margin-bottom: 17px;

            &::marker {
                content: "";
                display: none;
            }

            & .comment-author {

                & .avatar {
                    float: left;
                    margin-right: 11px;
                }

                & .fn {
                    font-size: 14px;
                    color: black;
                    font-weight: 600;
                    text-transform: uppercase;
                    font-style: normal;
                }

            }
            & .comment-awaiting-moderation,
            & .commentmetadata > a {
                font-size: 12px;
                color: #6f6f6f;
                text-decoration: none;
            }

            & p {
                background-color: #f2f2f2;
                padding: 11px;
                color: #5e5e5e;
                box-shadow: inset 0 0 2px #e6e6e6;
                margin-bottom: 0px;
            }

            & .reply > a {
                color: #a8a4a4;
                text-decoration: none;
                font-size: 12px;
                transition: color .3s ease;
                &:hover {
                    color: $hoverLink;
                }
            }
        }
    }
}

.comment-form {

    & .comment-notes {
        color: #aaa;
        font-size: 12px;
    }

    & .comment-form-cookies-consent {
        
        & > input {
            vertical-align: middle;
        }

        & label {
            font-size: 12px;
            color: #aaa;
        }
    }

}