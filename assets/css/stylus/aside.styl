.widget-title {
    margin-bottom: 8px;
    font-size: 1.5em;
    letter-spacing: 1px;
    display: inline-block;
    background-image: linear-gradient(to right, #c62f15 45%, #006a8f 50%, #000 99%);
    text-shadow: 0 0 2px #0c788f36;
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-decoration: none;
    transition: 0.5s ease;
}

.sidebar-list {
    padding-left: 27px;
    padding-right: 27px;
    box-sizing: border-box;

    & li {
        list-style: none;
    }

    & > li {
        & .searchform {
            text-align: center;

            & label,
            & #searchsubmit {
                display: none;
            }

            & input[type="text"] {
                width: 95%;
                border: 1px solid #e9e9e9;
                padding-top: 7px;
                padding-bottom: 7px;
                padding-left: 7px;
                box-sizing: border-box;
            }
        }

        & .menu {

            & li {
                border-bottom: 1px double #f5f5f5;
                line-height: 38px;
                transition: border-bottom .3s linear;

                &:hover {
                    background-color: #f9f9f9;
                    & > a {
                        color: $hoverLink;
                    }

                }

                & a {
                    font-size: 15px;
                    text-decoration: none;
                    color: #a598b1;

                    &:hover {
                        color: red;
                    }
                }

                & .sub-menu {
                    padding-left: 17px;
                    box-sizing: border-box;
                }
            }
        }
    }

    & .widget_meta {
        
        & li {
            padding-top: 5px;
            padding-left: 11px;
            padding-bottom: 5px;
            box-sizing: border-box;
            & a {
                text-decoration: none;
                background-image: linear-gradient(to right, #000 5%, #c62f15 45%, orangered 50%, orange 99%);
                background-clip: border-box;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                transition: .3s ease;
                &:hover {
                    padding-left: 3px;
                    background-image: linear-gradient(to right, red 5%, #c62f15 45%, orangered 50%, orange 99%);
                }
            }
        }
    }
}